{
    "manifest_version": 3,
    "name": "LinkedIn Job Tracker",
    "version": "1.0.0",
    "description": "Track your LinkedIn job applications automatically",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "*://*.linkedin.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Job Tracker"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.linkedin.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content.css"
            ]
        }
    ]
}